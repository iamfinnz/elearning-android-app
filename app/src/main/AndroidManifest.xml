<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.icourse" >
    
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.ICourse" >
        <activity
            android:name=".presentation.user.UserActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.content.ContentActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.changepassword.ChangePasswordActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.forgotpassword.ForgotPasswordActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.register.RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.login.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.splash.SplashActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.main.MainActivity"
            android:exported="true" />
    </application>

</manifest>